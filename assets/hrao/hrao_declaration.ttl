@prefix hrao: <https://carlamenegat.github.io/VarelaDigital/hrao#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix san: <http://example.org/san#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix rel: <http://purl.org/vocab/relationship/> .
@prefix geo: <http://www.w3.org/2003/01/geo/wgs84_pos#> .

#################################################################
# Ontology header
#################################################################

hrao: a owl:Ontology ;
    owl:versionIRI <https://carlamenegat.github.io/VarelaDigital/hrao/1.0/> ;
    rdfs:label "Historical Relations and Agency Ontology"@en ;
    owl:versionInfo "1.0 (Varela Digital, 2026)" .

#################################################################
# Property: hrao:requestedIntercession
#################################################################

hrao:requestedIntercession a owl:ObjectProperty ;
    rdfs:label "requested intercession from"@en ;
    rdfs:comment "Indicates that an agent requested informal intercession, influence, protection, or assistance from another agent, as expressed in a historical source."@en ;
    rdfs:subPropertyOf prov:wasInfluencedBy ;
    rdfs:domain foaf:Agent ;
    rdfs:range  foaf:Agent .

#################################################################
# Property: hrao:participatedInEvent
#################################################################

hrao:participatedInEvent a owl:ObjectProperty ;
    rdfs:label "participated in event"@en ;
    rdfs:comment "Indicates that an agent participated in a historical event (e.g., battle, uprising, campaign, meeting), as evidenced by a historical source. Kept as a lightweight property within the FRBRâ€“FaBiO + FOAF/REL stack; aligned with CIDOC CRM participation modeling."@en ;
    rdfs:seeAlso <http://www.cidoc-crm.org/cidoc-crm/P11_had_participant> ;
    rdfs:subPropertyOf prov:wasInfluencedBy ;
    rdfs:domain foaf:Agent ;
    rdfs:range  san:Event .

#################################################################
# Property: hrao:causedDeathOf
#################################################################

hrao:causedDeathOf a owl:ObjectProperty ;
    rdfs:label "caused the death of"@en ;
    rdfs:comment "Indicates that the actions of an agent resulted in the death of another agent, as reported in a historical source. This formulation avoids attributing direct or individual intent when the source indicates collective or indirect responsibility."@en ;
    rdfs:seeAlso <http://www.cidoc-crm.org/cidoc-crm/P100_was_death_of> ;
    rdfs:subPropertyOf prov:wasInfluencedBy ;
    rdfs:domain foaf:Agent ;
    rdfs:range  foaf:Agent .

#################################################################
# Property: hrao:servedUnder
#################################################################

hrao:servedUnder a owl:ObjectProperty ;
    rdfs:label "served under"@en ;
    rdfs:comment "Indicates that an agent (foaf:Person or foaf:Group) held an office, function, or role under the authority or leadership of another agent (foaf:Person or foaf:Group), as evidenced by a historical source (e.g., military chain of command)."@en ;
    rdfs:subPropertyOf prov:wasInfluencedBy ;
    rdfs:domain foaf:Agent ;
    rdfs:range  foaf:Agent .

#################################################################
# Property: hrao:compadreOf
#################################################################

hrao:compadreOf a owl:ObjectProperty, owl:SymmetricProperty ;
    rdfs:label "is compadre of"@en ;
    rdfs:comment "Indicates a mutual spiritual kinship relation between two persons, arising from the ritual of baptism or confirmation, common in Ibero-American societies."@en ;
    rdfs:subPropertyOf foaf:knows ;
    rdfs:domain foaf:Person ;
    rdfs:range  foaf:Person .

#################################################################
# Property: hrao:wasImprisonedBy
#################################################################

hrao:wasImprisonedBy a owl:ObjectProperty ;
    rdfs:label "was imprisoned by"@en ;
    rdfs:comment "Indicates that an agent was imprisoned by another agent, typically a government, military authority, or institution."@en ;
    rdfs:subPropertyOf prov:wasInfluencedBy ;
    rdfs:domain foaf:Agent ;
    rdfs:range  foaf:Agent .

#################################################################
# Property: hrao:commanded
#################################################################

hrao:commanded a owl:ObjectProperty ;
    rdfs:label "commanded"@en ;
    rdfs:comment "Indicates that an agent exercised military or organizational command over another agent."@en ;
    rdfs:subPropertyOf prov:wasInfluencedBy ;
    rdfs:domain foaf:Agent ;
    rdfs:range  foaf:Agent .


