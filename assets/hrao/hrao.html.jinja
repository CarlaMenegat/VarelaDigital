      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Global site styles -->
    <link rel="stylesheet" href="../css/styles.css" />
    <!-- Reuse the documentation/data_model look -->
    <link rel="stylesheet" href="../css/data_model.css" />
